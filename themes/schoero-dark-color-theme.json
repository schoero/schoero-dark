  "tokenColors": [
    {
      "name": "Dark gray - comment",
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#636d83"
      }
    },
    {
      "name": "Variables",
      "scope": [
        "variable",
        "string constant.other.placeholder"
      ],
      "settings": {
        "foreground": "#a1a7b5"
      }
    },
    {
      "name": "Gray - Text color",
      "scope": [
        "source",                                                               // Everything
        "constant.other.color",
        "punctuation",                                                          // Curly braces and brackets and semicolon
        "meta.brace.square",                                                    // Square brackets
        "meta.brace.round",                                                     // Round brackets
        "variable.other.jsdoc",                                                 // JSDoc var


        //-- CSS

        "support.constant.property-value.css",                                  // CSS property values

      ],
      "settings": {
        "foreground": "#b1b6c1"
      }
    },
    {
      "name": "Medium dark Gray",
      "scope": [


        //-- Markdown

        "markup.fenced_code.block.markdown",                                    // Markdown code blocks
      ],
      "settings": {
        "foreground": "#9299a8"
      }
    },
    {
      "name": "Invalid",
      "scope": [
        "invalid",
        "invalid.illegal"
      ],
      "settings": {
        "foreground": "#FF5370"
      }
    },
    {
      "name": "Red",
      "scope": [
        "keyword",                                                              // Optional question mark, equals
        "meta.method.declaration",                                              // Method declaration
        "meta.object.member",                                                   // Object member
        "variable.other.object.property",                                       // Object property
        "variable.other.property",                                              // Class property
        "variable.language.super",                                              // Super
        "variable.language.this",                                               // this keyword
        "meta.import",                                                          // Import
        "variable.other.readwrite.alias",                                       // Alias
        "punctuation.definition.template-expression",                           // Template expression: ${}
        "support.variable.property",                                            // Variable property: .length
        "support.type.property-name.json",                                      // JSON property name
        "support.type.property-name.json punctuation",                          // JSON property quotes
        

        //-- HTML

        "meta.tag",                                                             // HTML tags


        //-- Markdown

        "markup.heading",                                                       // Markdown Markup heading
        "punctuation.definition.heading",                                       // Markdown Markup heading punctuation


        //-- CSS
        
        "entity.name.tag.css",                                                  // CSS html tag


